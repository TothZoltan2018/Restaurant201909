@model IEnumerable<OopRestaurant201909.Models.Location>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@if (Request.IsAuthenticated //csak akkor tufjuk a user-t vizsgalni, ha be vagyunk jelentkezve:
    && (User.IsInRole("Admin") || User.IsInRole("Fopincer")))//Ha a User az Admin vagy a Fopincer csoporthoz tartozik:
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsOutdoor)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsOutdoor)
            </td>
            <td>
                @if (Request.IsAuthenticated //csak akkor tudjuk a user-t vizsgalni, ha be vagyunk jelentkezve:
                    && (User.IsInRole("Admin") || User.IsInRole("Fopincer")))//Ha a User az Admin vagy a Fopincer csoporthoz tartozik:
                {
                    <span>@*div-be/span-be kell tenni, mert tobb, mint egy c# kifejezes all itt, hiszen ott van a | html elem is*@
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    </span>
                }
                @Html.ActionLink("Details", "Details", new { id = item.Id })
                @if (Request.IsAuthenticated //csak akkor tudjuk a user-t vizsgalni, ha be vagyunk jelentkezve:
                    && (User.IsInRole("Admin") || User.IsInRole("Fopincer")))//Ha a User az Admin vagy a Fopincer csoporthoz tartozik:
                {
                    <span>@*div-be/span-be kell tenni, mert tobb, mint egy c# kifejezes all itt, hiszen ott van a | html elem is*@
                        | @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </span>                 
                }
            </td>
        </tr>
    }

</table>
